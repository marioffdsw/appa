<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <!--android:background="@drawable/spinner_item_selector"
    android:padding="3dp">-->

    <!--android:contentDescription="@string/icon"-->


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:shadowColor="#ff2eff34"
        android:shadowDx="3" android:shadowDy="2" android:shadowRadius="1.8">

        <ImageView
            android:id="@+id/icono"
            android:layout_width="48dp"
            android:layout_height="48dp"></ImageView>

        <TextView
            android:id="@+id/texto"
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/icono"
            android:layout_alignBottom="@+id/icono"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:textSize="15sp"
            android:textColor="@android:color/black"/>
            <!--android:popupBackground="@android:drawable/dialog_holo_dark_frame"-->


    </FrameLayout>


</RelativeLayout>