<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:background="@color/fondo" >

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/backgrds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_appa"
            android:scaleType="centerCrop"
            />

        <RelativeLayout
            android:id="@+id/item_marca"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:elevation="2dp"
            android:onClick="muestre">
            <ImageView
                android:id="@+id/icon_marca"
                android:background="@drawable/adidas"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/text_marca"
                android:text="Marcas"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/icon_marca"
                android:textColor="#ff022533"
                android:gravity="center_vertical"
                android:paddingRight="40dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_persona"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:focusable="false"
            android:elevation="2dp"
            android:onClick="muestre">
            <ImageView
                android:id="@+id/icon_persona"
                android:background="@drawable/lacoste"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/text_persona"
                android:text="Personas"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/icon_persona"
                android:textColor="#ff022533"
                android:gravity="center_vertical"
                android:paddingRight="40dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_local"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:elevation="2dp"
            android:onClick="muestre">
            <ImageView
                android:id="@+id/icon_local"
                android:background="@drawable/converse"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tex_local"
                android:text="Locales"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/icon_local"
                android:textColor="#ff022533"
                android:gravity="center_vertical"
                android:paddingRight="40dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"/>
        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selection 1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selelction 2"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/configuration_fragment_container"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

</LinearLayout>