<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="3dp"
    android:gravity="top|center_vertical|center|center_horizontal"
    android:background="@drawable/sombra"
    android:minWidth="200dp" android:minHeight="370dp"><![CDATA[
    >

    ]]>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@drawable/sombra_titulo_rojo"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Aplicacion de Prestamos PaoloSport "
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:id="@+id/textView4"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:shadowColor="#00ff5f00"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:layout_gravity="center" />

    </FrameLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:fillViewport="true"
        android:layout_gravity="center">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|center_horizontal">

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:text="Aplicacion movil creada para el control de prestamos y pedidos.  Esta Aplicación fue desarrollada por:"
                android:textColor="#ff393739"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:text="Ing. Mario Florez"
                android:textColor="#ff393739"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:text="Ing. Andres Solarte"
                android:textColor="#ff393739"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:text="Si tiene algún problema utilizando la aplicación o encuentra algun error, envíe un correo a las siguientes direcciónes:"
                android:id="@+id/textView5"
                android:textColor="#ff393739"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/texto"
                android:id="@+id/textView6"
                android:layout_gravity="center"
                android:textColor="#ff006bff"
                android:textColorLink="#ff51b6ff"
                android:paddingBottom="7dp"
                android:paddingTop="7dp" />

            <TextView
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:text="Por favor,envíenos sus sugerencias para seguir mejorando la aplicación.Muchas gracias."
                android:id="@+id/textView9"
                android:textColor="#ff393739"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APPA"
                android:id="@+id/textView3"
                android:textColor="#ff393739"
                android:layout_gravity="center"
                android:paddingTop="7dp" />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0.0"
            android:id="@+id/textView7"
            android:textColor="#ff393739"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copyright ©Joma 2015"
                android:id="@+id/textView8"
                android:textColor="#ff393739"
                android:layout_gravity="center" />
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/divider2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:background="@color/iconos" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:text="ACEPTAR"
        android:id="@+id/aceptar"
        android:nestedScrollingEnabled="false"
        android:layout_weight="16.50"
        android:background="@drawable/sombra"
        android:textColor="@color/iconos"
        android:gravity="center_vertical|center_horizontal" />

</LinearLayout>