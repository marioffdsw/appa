<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="3dp"
    android:gravity="bottom|center_horizontal"
    android:minWidth="150dp" android:minHeight="190dp"
    android:id="@+id/ll_teclado"
    android:background="@drawable/sombra"
    android:animateLayoutChanges="true">
    >




            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@drawable/sombra_titulo">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="ITEM"
                    android:id="@+id/textView12"
                    android:layout_gravity="center"
                    android:textColor="#ffffffff"
                    android:textStyle="bold"
                    android:elegantTextHeight="false" />
            </FrameLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="1dp"
                android:background="@color/material_blue_grey_800"
                android:visibility="invisible" />



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:columnCount="6"
                    android:rowCount="6"
                    android:id="@+id/dd">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageView2"
                        android:src="@drawable/ico_persona_gr"
                        android:layout_gravity="center_vertical"
                        android:layout_row="0"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Encargado:"
                        android:id="@+id/textView21"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_row="0"
                        android:layout_column="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Large Text"
                        android:id="@+id/tv_persona_tarjeta"
                        android:textColor="@color/black"
                        android:layout_gravity="fill_horizontal|center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_row="0"
                        android:layout_columnSpan="3" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageView3"
                        android:src="@drawable/ico_articulo_gr"
                        android:layout_gravity="center_vertical"
                        android:layout_row="1"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Articulo:"
                        android:id="@+id/textView24"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_row="1"
                        android:layout_column="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Large Text"
                        android:id="@+id/tv_marca_tarjeta"
                        android:textColor="@color/black"
                        android:layout_gravity="fill_horizontal|center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_row="1"
                        android:layout_columnSpan="3" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageView10"
                        android:src="@drawable/ico_codigo_gr"
                        android:layout_gravity="center_vertical"
                        android:layout_row="2"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Codigo"
                        android:id="@+id/textView28"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_row="2"
                        android:layout_column="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Large Text"
                        android:id="@+id/tv_codigo_tarjeta"
                        android:textColor="@color/black"
                        android:layout_gravity="fill_horizontal|center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_row="2"
                        android:layout_columnSpan="3" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageView4"
                        android:src="@drawable/ico_talla_gr"
                        android:layout_gravity="center_vertical"
                        android:layout_row="3"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Talla:"
                        android:id="@+id/textView25"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_row="3"
                        android:layout_column="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Large Text"
                        android:id="@+id/tv_talla_tarjeta"
                        android:textColor="@color/black"
                        android:layout_gravity="fill_horizontal|center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_row="3"
                        android:layout_columnSpan="3" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageView5"
                        android:src="@drawable/ico_destino_gr"
                        android:layout_gravity="center_vertical"
                        android:layout_row="4"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Destino:"
                        android:id="@+id/textView26"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_row="4"
                        android:layout_column="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Large Text"
                        android:id="@+id/tv_destino_tarjeta"
                        android:textColor="@color/black"
                        android:layout_gravity="fill_horizontal|center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_row="4"
                        android:layout_columnSpan="3" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageView6"
                        android:src="@drawable/ico_hubicacion_gr"
                        android:layout_gravity="center_vertical"
                        android:layout_row="5"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Origen:"
                        android:id="@+id/textView27"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_row="5"
                        android:layout_column="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/tv_origen_tarjeta"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_row="5" />

                    <RadioGroup
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:id="@+id/rg_origen_tarjeta">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="L.124"
                            android:id="@+id/r1"
                            android:textColor="@color/black"
                            android:checked="false" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="L.126"
                            android:id="@+id/r2"
                            android:textColor="@color/black"
                            android:checked="false" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bodega"
                            android:id="@+id/r3"
                            android:textColor="@color/black"
                            android:checked="false" />
                    </RadioGroup>

                </GridLayout>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:columnCount="3"
                    android:rowCount="6"
                    android:layout_marginRight="15dp">

                </GridLayout>

            </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ACEPTAR"
            android:id="@+id/btn_aceptar_teclado"
            android:background="@drawable/botonpulsado"
            style="?android:attr/buttonStyleSmall"
            android:paddingRight="10dp"
            android:layout_gravity="fill_horizontal"
            android:drawableLeft="@drawable/ico_aceptar_vd"
            android:gravity="left|center_vertical"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            android:soundEffectsEnabled="false" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="CANCELAR"
            android:id="@+id/btn_cancelar_teclado"
            android:background="@drawable/botonpulsado"
            style="?android:attr/buttonStyleSmall"
            android:paddingRight="10dp"
            android:layout_gravity="fill_horizontal"
            android:gravity="left|center_vertical"
            android:drawableLeft="@drawable/ico_cancelar_rj"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="4dp"
            android:soundEffectsEnabled="false" />
    </LinearLayout>


</LinearLayout>