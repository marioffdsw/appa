<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="locales"
        android:id="@+id/btnLocal"
        android:onClick="local" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="marca"
        android:id="@+id/btnMarca"
        android:onClick="marca" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PERSONA"
        android:id="@+id/btnPersona"
        android:onClick="persona" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRESTAMOS"
        android:id="@+id/btnPrestamos"
        android:onClick="prestamos"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDate"
        android:text="Lista Prestamos"
        android:onClick="listaPrestamos" />

</LinearLayout>