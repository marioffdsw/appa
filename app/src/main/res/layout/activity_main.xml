<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:background="@color/fondo"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="locales"
            android:id="@+id/btnLocal"
            android:onClick="local"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="marca"
            android:id="@+id/btnMarca"
            android:onClick="marca" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PERSONA"
            android:id="@+id/btnPersona"
            android:onClick="persona" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRESTAMOS"
            android:id="@+id/btnPrestamos"
            android:onClick="prestamos"/>

        <Button android:id="@+id/btnListaPrestamos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lista_prestamos"
            android:onClick="listaPrestamos"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:weightSum="1"
        android:id="@+id/ee">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/ic_personahd" />

        <com.paolosport.appa.CircularImageView
            android:id="@+id/row_icon"
            android:layout_width="209dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:contentDescription="@string/app_name"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/catico"
            android:layout_weight="0.47" />

    </LinearLayout>

</LinearLayout>